﻿# ========================================
# 前端生产环境配置
# ========================================
# 项目: ohhot招聘平台
# 域名: https://www.ohhot.top
# 后端端口: 5001 (通过Nginx代理)
# 更新时间: 2025-10-22
# ========================================

# ==================== API配置 ====================
# API基础路径 - 通过Nginx反向代理到后端 http://localhost:5001/api
VITE_API_BASE_URL=https://www.ohhot.top/api

# API超时时间（毫秒）
VITE_API_TIMEOUT=30000

# ==================== 应用配置 ====================
# 应用标题 - 显示在浏览器标签页
VITE_APP_TITLE=ohhot招聘平台

# 应用描述 - 用于SEO
VITE_APP_DESCRIPTION=ohhot招聘平台 - 专业的在线招聘服务平台，连接优秀人才与优质企业

# 应用版本
VITE_APP_VERSION=1.0.0

# 应用域名
VITE_APP_DOMAIN=https://www.ohhot.top

# 生产环境标识
VITE_APP_ENV=production

# ==================== 功能配置 ====================
# 是否启用数据分析
VITE_ENABLE_ANALYTICS=false

# Google Analytics ID（如需使用请填写真实ID）
VITE_GOOGLE_ANALYTICS_ID=

# 是否启用PWA（渐进式Web应用）
VITE_ENABLE_PWA=true

# 是否启用离线支持
VITE_ENABLE_OFFLINE_SUPPORT=false

# ==================== UI配置 ====================
# 主题模式
VITE_THEME=light

# 主色调
VITE_PRIMARY_COLOR=#1890ff

# 辅助色
VITE_SECONDARY_COLOR=#52c41a

# ==================== 路由配置 ====================
# 应用基础路径
VITE_BASE_URL=/

# 是否使用Hash路由
VITE_HASH_ROUTER=false

# ==================== 构建配置 ====================
# 是否生成SourceMap（生产环境建议关闭）
VITE_BUILD_SOURCEMAP=false

# 是否压缩代码
VITE_BUILD_MINIFY=true

# 构建目标
VITE_BUILD_TARGET=es2015

# ==================== 第三方服务 ====================
# reCAPTCHA站点密钥（如需使用请填写）
VITE_RECAPTCHA_SITE_KEY=

# 地图API密钥（如需使用请填写）
VITE_MAP_API_KEY=

# ==================== 功能开关 ====================
# 是否启用社交登录
VITE_ENABLE_SOCIAL_LOGIN=false

# 是否启用推送通知
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# 是否启用暗黑模式
VITE_ENABLE_DARK_MODE=true

# ==================== 性能配置 ====================
# 是否启用懒加载
VITE_LAZY_LOAD_ENABLED=true

# 是否启用图片优化
VITE_IMAGE_OPTIMIZATION=true

# 是否启用代码分割
VITE_CODE_SPLITTING=true

# ==================== 安全配置 ====================
# 生产环境模式
NODE_ENV=production
