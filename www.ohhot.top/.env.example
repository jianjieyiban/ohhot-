# 前端环境变量示例文件
# 复制此文件为 .env 并根据需要修改配置

# API基础URL
VITE_API_BASE_URL=/api

# 应用标题
VITE_APP_TITLE=三石招聘

# 应用描述
VITE_APP_DESCRIPTION=专业的招聘平台，连接企业与人才

# 应用版本
VITE_APP_VERSION=1.0.0

# 默认语言
VITE_DEFAULT_LANGUAGE=zh-CN

# 默认主题
VITE_DEFAULT_THEME=light

# 是否启用调试模式
VITE_DEBUG=true

# 是否启用PWA
VITE_ENABLE_PWA=false

# Google Analytics ID（可选）
VITE_GA_ID=

# Sentry DSN（可选）
VITE_SENTRY_DSN=

# 地图API密钥（可选）
VITE_MAP_API_KEY=

# 文件上传大小限制（MB）
VITE_MAX_UPLOAD_SIZE=10

# 图片压缩质量（0-1）
VITE_IMAGE_QUALITY=0.8

# 请求超时时间（毫秒）
VITE_REQUEST_TIMEOUT=10000

# 重试次数
VITE_RETRY_COUNT=3

# 重试延迟（毫秒）
VITE_RETRY_DELAY=1000